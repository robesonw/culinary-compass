{
  "name": "ForumPost",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Post title"
    },
    "content": {
      "type": "string",
      "description": "Post content"
    },
    "category": {
      "type": "string",
      "enum": [
        "general",
        "recipes",
        "nutrition",
        "meal_prep",
        "tips",
        "questions"
      ],
      "default": "general",
      "description": "Post category"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Post tags"
    },
    "likes_count": {
      "type": "number",
      "default": 0,
      "description": "Number of likes"
    },
    "views_count": {
      "type": "number",
      "default": 0,
      "description": "Number of views"
    },
    "comments_count": {
      "type": "number",
      "default": 0,
      "description": "Number of comments"
    },
    "is_pinned": {
      "type": "boolean",
      "default": false,
      "description": "Whether post is pinned"
    },
    "author_name": {
      "type": "string",
      "description": "Name of the author"
    }
  },
  "required": [
    "title",
    "content",
    "category"
  ]
}
{
  "name": "Notification",
  "type": "object",
  "properties": {
    "recipient_email": {
      "type": "string",
      "description": "Email of the notification recipient"
    },
    "type": {
      "type": "string",
      "enum": [
        "new_follower",
        "plan_comment",
        "recipe_comment",
        "plan_like",
        "recipe_like",
        "forum_reply"
      ],
      "description": "Type of notification"
    },
    "title": {
      "type": "string",
      "description": "Notification title"
    },
    "message": {
      "type": "string",
      "description": "Notification message"
    },
    "link": {
      "type": "string",
      "description": "Link to the related content"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether notification has been read"
    },
    "actor_name": {
      "type": "string",
      "description": "Name of the person who triggered the notification"
    }
  },
  "required": [
    "recipient_email",
    "type",
    "title",
    "message"
  ]
}